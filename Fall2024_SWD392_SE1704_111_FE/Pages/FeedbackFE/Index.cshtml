@page
@model Fall2024_SWD392_SE1704_111_FE.Pages.FeedbackFE.IndexModel

@{
    ViewData["Title"] = "Feedback Management";
}

<h2>Feedback Management</h2>

@{
    // Lấy tên người dùng từ session
    var currentUserName = HttpContext.Session.GetString("CurrentUsername");
    var role = HttpContext.Session.GetString("Role");
}

@if (!string.IsNullOrEmpty(currentUserName))
{
    <h2>Welcome, @currentUserName!</h2>
}

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Feedback)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.FeedbackId">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.FeedbackId">Change Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="align-middle">
    <ul class="pagination">
        @for (int b = 1; b <= Model.Count; b++)
        {
            <li class="page-item @(b == Model.Index ? "active" : "")">
                <a asp-page="./Index" asp-route-Index="@b" class="page-link">@b</a>
            </li>
        }
    </ul>
</div>
