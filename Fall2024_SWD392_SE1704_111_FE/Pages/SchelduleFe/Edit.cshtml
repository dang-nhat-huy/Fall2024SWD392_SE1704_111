@page
@model Fall2024_SWD392_SE1704_111_FE.Pages.ScheduleFE.EditModel
@{
    ViewData["Title"] = "Edit Schedule";
}

<h2>Edit Schedule</h2>

<div class="text-danger">
    @TempData["error"]
</div>
<div class="text-success">
    @TempData["success"]
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="UpdateDto.StartTime" class="control-label">Start Time</label>
        <input asp-for="UpdateDto.StartTime" type="time" class="form-control" />
        <span asp-validation-for="UpdateDto.StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdateDto.EndTime" class="control-label">End Time</label>
        <input asp-for="UpdateDto.EndTime" type="time" class="form-control" />
        <span asp-validation-for="UpdateDto.EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdateDto.StartDate" class="control-label">Start Date</label>
        <input asp-for="UpdateDto.StartDate" type="date" class="form-control" />
        <span asp-validation-for="UpdateDto.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdateDto.EndDate" class="control-label">End Date</label>
        <input asp-for="UpdateDto.EndDate" type="date" class="form-control" />
        <span asp-validation-for="UpdateDto.EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
