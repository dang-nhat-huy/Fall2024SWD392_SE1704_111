@page
@model Fall2024_SWD392_SE1704_111_FE.Pages.ScheduleFE.IndexModel

@{
    ViewData["Title"] = "Schedule Management";
}

<h2>Schedule Management</h2>

@{
    // Retrieve the current username and role from session
    var currentUserName = HttpContext.Session.GetString("CurrentUsername");
    var role = HttpContext.Session.GetString("Role");
}

@if (!string.IsNullOrEmpty(currentUserName))
{
    <h2>Welcome, @currentUserName!</h2>
}

@if (TempData["Message"] != null)
{
    <h2 class="text-info">@TempData["Message"]</h2>
}

<form method="post">
    <label for="searchValue">Search by Start Date</label>
    <input type="date" id="searchValue" name="searchValue" value="@Model.searchValue" />
    <button type="submit">Search</button>
</form>

<p>
    <a asp-page="Create">Create New Schedule</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].ScheduleId)</th>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].StartTime)</th>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].EndTime)</th>
                <th>@Html.DisplayNameFor(model => model.Schedules[0].Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Schedules)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ScheduleId)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ScheduleId">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ScheduleId">Change Status</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="align-middle">
    <ul class="pagination">
        @for (int b = 1; b <= Model.Count; b++)
        {
            <li class="page-item @(b == Model.Index ? "active" : "")">
                <a asp-page="./Index" asp-route-Index="@b" class="page-link">@b</a>
            </li>
        }
    </ul>
</div>
