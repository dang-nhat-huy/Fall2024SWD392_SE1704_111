@{
    var role = Context.Request.HttpContext.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fall2024_SWD392_SE1704_111_FE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fall2024_SWD392_SE1704_111_FE.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #e3f2fd;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .nav-link {
            color: #212529;
            transition: color 0.2s ease;
        }

            .nav-link:hover {
                color: #007bff;
            }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 10px 0;
        }

        /* CSS for sidebar */
        .sidebar {
            background-color: #e9ecef;
            padding: 20px;
            border-radius: 10px;
        }

            .sidebar .nav-link {
                display: block;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Fall2024_SWD392_SE1704_111_FE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-3 sidebar">
                <ul class="navbar-nav flex-column">
                    @if (role is null)
                    {

                    }
                    else if (role.Equals("Admin") || role.Equals("Manager") || role.Equals("Staff"))
                    {
                        if (role.Equals("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/UserFE/Index">Manage Account</a>
                            </li>
                        }
                        else if (role.Equals("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/UserFE/Index">Manage Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/HairServiceFE/Index">Manage Service</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/VoucherFE/Index">Manage Voucher</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/FeedbackFE/Index">Manage Feedback</a>
                            </li>
@*                             <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/SchelduleFe/Index">Manage Schedule</a>
                            </li> *@
                        }
                        else if (role.Equals("Staff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/BookingFE/Index">Manage Booking</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Fall2024_SWD392_SE1704_111_FE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>